Exercício 1
n=float(input("Digite um número inteiro: "))
if n%2 == 0:
    print("O número é par.")
else:
    print("O número é ímpar.")


Exercício 2
nc=10
ni=float(input("Digite um número inteiro: "))
diferenca = nc - ni
if diferenca < 0:
    diferenca = diferenca * (-1)
print(f"Os números estão {diferenca} unidades distantes.")


Exercício 3
import math
nota = float(input("Digite a nota do aluno: "))
parte_decimal, parte_inteira = math.modf(nota)
if parte_decimal > 0.5:
    nota_arredondada = parte_inteira + 1.0
else:
    nota_arredondada = parte_inteira
print(f"Resultado do arredondamento: {nota_arredondada:.1f}")


Exercício 4
num1 = float(input("Digite o primeiro número: "))
num2 = float(input("Digite o segundo número: "))
num3 = float(input("Digite o terceiro número: "))
numeros = [num1, num2, num3]
numeros_ordenados = sorted(numeros)
menor, meio, maior = numeros_ordenados
print(f"a) O maior número é: {maior}")
print(f"b) O menor número é: {menor}")
print(f"c) O número do meio é: {meio}")


Exercício 5
total_salarios_liquidos = 0.0
num_funcionarios = 0

print("Calcular salário líquido")
print("Digite '0' no salário bruto para finalizar o programa.")
while True:
    try:
        sal_bru = float(input("\nDigite o salário bruto do funcionário: "))
        if sal_bru == 0:
            break
        horas = float(input("Digite o número de horas trabalhadas: "))
        num_funcionarios += 1
        
        salario_liquido = sal_bru
        total_descontos = 0.0
        adicional_horas_extras = 0.0

        if sal_bru < 800.00:
            pass
        elif 800.00 <= sal_bru <= 1600.00:
            total_descontos = sal_bru * 0.13
            salario_liquido -= total_descontos
        else:
            total_descontos = sal_bru * 0.22
            salario_liquido -= total_descontos

        if horas > 160:
            valor_hora_normal = sal_bru / 160.0
            horas_extras = horas - 160
            valor_hora_extra = valor_hora_normal * 1.5
            adicional_horas_extras = horas_extras * valor_hora_extra
            salario_liquido += adicional_horas_extras
            print(f"Adicional de horas extras: {adicional_horas_extras:.2f}")
        else:
            print("Não possui adicional de horas extras trabalhadas.")

        print(f"\nFuncionário {num_funcionarios}:")
        print(f"Salário bruto: {sal_bru:.2f}")
        print(f"Total de descontos: {total_descontos:.2f}")
        print(f"Salário líquido final: R$ {salario_liquido:.2f}")
        
        total_salarios_liquidos += salario_liquido

    except ValueError:
        print("\nEntrada inválida. Por favor, digite apenas números para os valores.")
        continue

print("\nPROGRAMA FINALIZADO")
print(f"Total de funcionários processados: {num_funcionarios}")
print(f"Total de salários líquidos pagos: R$ {total_salarios_liquidos:.2f}")



